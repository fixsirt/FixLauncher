{
  "name": "fixlauncher",
  "version": "2.0.6",
  "description": "FixLauncher Launcher for Minecraft - Modern, Secure, Updated",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,css,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "electron-builder",
    "build:win": "electron-builder --win --config.forceCodeSigning=false",
    "pack:win": "node scripts/pack.js"
  },
  "keywords": [
    "minecraft",
    "launcher",
    "electron"
  ],
  "author": "fixsirt",
  "license": "ISC",
  "build": {
    "appId": "com.fixlauncher.launcher",
    "productName": "FixLauncher Launcher",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "logo.png",
      "requestedExecutionLevel": "asInvoker"
    },
    "portable": {
      "artifactName": "${productName}-Portable.${ext}"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "style.css",
      "logo.png",
      "logo.ico",
      "bg.jpg",
      "bg_BLUE.jpg",
      "bg_GREEN.jpg",
      "bg_PURPLE.jpg",
      "bg_ORANGE.jpg",
      "bg_PINK.jpg",
      "package.json",
      "src/**/*.js",
      "!node_modules/**/*",
      "node_modules/adm-zip/**/*",
      "node_modules/discord-rpc/**/*",
      "node_modules/electron-updater/**/*",
      "!**/*.md",
      "!**/*.txt",
      "!**/*.map",
      "!**/test/**/*",
      "!**/tests/**/*",
      "!**/*.test.js",
      "!**/*.spec.js"
    ],
    "asar": true,
    "compression": "normal",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "fixsirt",
      "repo": "fixlauncher",
      "releaseType": "release"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "verbose": true
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true,
      "es2022": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 120,
    "tabWidth": 4,
    "semi": true
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "discord-rpc": "^4.0.1",
    "electron-updater": "^6.8.3"
  }
}
